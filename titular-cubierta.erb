    <% File.open("#{version}", "r:ISO-8859-1:UTF-8" ).each do |line| %>

      <% if ( line =~  /asin\W(\w*)/ ) %>
         <% asin = $1 %>
      <%  end %>

      <% if ( line =~  /titulo\W(\w*)/ ) %>
            <% $titulo = $1 %>
      <%  end %>

   <% end %>

    <item id="volumen" media-type="application/xhtml+xml" href="volumen.html"></item>
    <item id="introduccion" media-type="application/xhtml+xml" href="introduccion.html"></item>
    <item id="toc" media-type="application/xhtml+xml" href="toc.html"></item>

    <% File.open("#{volumen}", "r:ISO-8859-1:UTF-8" ).each do |line| %>
    <% if (line =~ /asin\W(\w*)/ )  %>
        <% num = $1  %>
        <% if (num == asin) %>
           <item id="<%=asin%>" media-type="application/xhtml+xml" href="<%=asin%>.html"></item>
           <% if (line =~ /cubierta (.*)\)/ )  %>
               <item id="My_Cover" media-type="image/jpg" href="<%=$1%>.jpg"/>
               <% system( "make tit ARCHIVO= #{$1}.jpg TITULO= #{$titulo}" )  %>
           <% end %>
        <% end %>
      <%  end %>
    <% end %>

